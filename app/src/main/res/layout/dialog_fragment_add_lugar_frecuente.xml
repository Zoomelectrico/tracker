<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.tracker.tracker.ModifySQDialog">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:background="?attr/backgroundColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="AÃ±adir Lugar Frecuente"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?attr/textColor"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelNombre"
                android:textColor="?attr/textColor"/>

            <EditText
                android:id="@+id/txtLFNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre del Lugar"
                android:inputType="textPersonName"
                android:textColorHint="?attr/lowContrastTextColor"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelCoordenadas"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:textColor="?attr/textColor" />

            <TextView
                android:id="@+id/txtLFCoordenadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:layout_marginBottom="15dp"
                android:textSize="9pt"
                android:textColor="?attr/textColor" />

            <Button
                android:id="@+id/btnLFFindPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="?attr/cardColor"
                android:padding="16dp"
                android:layout_marginBottom="5dp"
                android:text="@string/btnEscogerSitio"
                android:textColor="?attr/textColor" />

            <LinearLayout
                android:id="@+id/layoutALFButtons"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnALFCancelar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?attr/backgroundColor"
                    android:padding="4dp"
                    android:src="@drawable/ic_delete"
                    android:textColor="?attr/textColor" />

                <ImageButton
                    android:id="@+id/btnAgregarLF"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="?attr/backgroundColor"
                    android:cropToPadding="false"
                    android:padding="4dp"
                    android:src="@drawable/ic_confirm_icon"
                    android:textColor="?attr/textColor" />


            </LinearLayout>

            <ProgressBar
                android:id="@+id/readyALFProgressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>