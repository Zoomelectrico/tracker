<resources>

    <!-- Base application theme. -->
    <!-- Light Theme / Day Mode -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="backgroundColor">@color/white</item>
        <item name="cardColor">@color/lowContrastLight</item>
        <item name="cardColorAlternate">#c1c1c1</item>
        <item name="textColor">@color/black</item>
        <item name="lowContrastTextColor">@color/lowContrastDark</item>
        <item name="tintColor">@color/lowContrastDark</item>
        <item name="buttonColor">@color/secondaryColor</item>
        <item name="buttonColorDark">@color/secondaryDarkColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Theme / Night Mode -->
    <style name="DarkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#1E2121</item>
        <item name="colorPrimaryDark">#1E2121</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="backgroundColor">@color/black</item>
        <item name="cardColor">@color/lowContrastDark</item>
        <item name="cardColorAlternate">#636d70</item>
        <item name="textColor">@color/white</item>
        <item name="lowContrastTextColor">@color/lowContrastLight</item>
        <item name="tintColor">@color/lowContrastLight</item>
        <item name="buttonColor">@color/colorPrimary</item>
        <item name="buttonColorDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:colorForeground">@color/lowContrastLight</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Launcher">
    <item name="android:windowBackground">@drawable/launch_screen</item>
    <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
    <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

</resources>
